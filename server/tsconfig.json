{
    "compilerOptions": {
      "module": "commonjs",
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false, 
      "noImplicitThis": false,
      "sourceMap": true,
      "baseUrl": ".",
      "allowJs": true,
      "outDir": "dist",
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost",
        "es2015"
      ],
      "paths": {
        "@/*": [
            "node_modules/",
            "types/*"
        ]
      }
    },
    "exclude": [
        "node_modules"
    ]
  }